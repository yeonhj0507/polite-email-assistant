{
  "manifest_version": 3,
  "name": "Polite Gmail Assistant",
  "version": "1.0.0",
  "description": "Suggests polite rewrites for Gmail emails using AI.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "http://127.0.0.1/*"
  ],
  "host_permissions": [
    "https://mail.google.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://mail.google.com/*"], 
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }]
}
